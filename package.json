{
  "name": "permitpool",
  "version": "1.0.0",
  "description": "PermitPool - Institutional DeFi with ENS-based licensing",
  "private": true,
  "workspaces": [
    "admin-portal",
    "trader-app"
  ],
  "scripts": {
    "install-all": "npm install",
    "dev": "npm run dev --workspace=admin-portal & npm run dev --workspace=trader-app",
    "build": "npm run build --workspace=admin-portal && npm run build --workspace=trader-app",
    "dev:admin": "npm run dev --workspace=admin-portal",
    "dev:trader": "npm run dev --workspace=trader-app",
    "build:admin": "npm run build --workspace=admin-portal",
    "build:trader": "npm run build --workspace=trader-app",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "setup:circle-secret": "node scripts/generate-circle-secret.js"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.182.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@circle-fin/developer-controlled-wallets": "^10.1.0",
    "@erc7824/nitrolite": "^0.5.3",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "dotenv": "^17.2.4",
    "ethers": "^6.16.0",
    "postprocessing": "^6.38.2",
    "three": "^0.182.0",
    "viem": "^2.45.1",
    "ws": "^8.19.0"
  }
}
